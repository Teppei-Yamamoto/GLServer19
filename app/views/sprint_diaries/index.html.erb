<div class="page-header">
  <%= link_to new_scrum_member_sprint_diary_path, class: 'btn btn-primary' do %>
 <span class="glyphicon glyphicon-plus"></span>
    新規作成
  <% end %>
</div>

<form>
  <!-- タイトルと期間とゴール -->
  <div class="form-group">
    <div class="row">
      <div class="col-6 offset-4">
        <h1>〇月△日のsprintdiary</h1>
      </div>    
      <div class="col-3 offset-2">
        <h2>目標</h2>
        <h2>スプリント</h2>
      </div>
    </div> 
  </div>
  <!-- タイトルと期間とゴール終わり -->

  <!-- チャット表示-->
  <div class="container-fluid">
    <div class="row px-3">
      <div class="col-6">
      <h2>チャット</h2>
        <div class="row form-group border border-dark mt-3 overflow-auto" style="width:42.1rem; height:50rem;">
        </div>
          <div class="row form-group">
            <label for="textarea1">チャット投稿画面</label>
            <textarea id="textarea1" class="form-control"></textarea>
          </div>
      </div>
  <!-- チャット表示終わり -->

  <!-- まとめ表示 -->
    <div class="col-6">
      <h2>まとめ</h2>
        <div class="row form-group border border-dark mt-2 overflow-auto" style="width:25rem; height:25rem;">
        </div>
        <div class="row form-group">
          <label for="textarea1">まとめ投稿画面</label>
          <textarea id="textarea1" class="form-control"></textarea>
      　</div>
      </div>
      </div>
  </div>
  <!-- まとめ終わり -->
</form>

<!-- 日記一覧表示 -->
  <div class="table-responsive">
   <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
          <th>アバター</th>
          <th>日記一覧</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @sprint_diaries) do |sprint_diary| %>
      <td><%= sprint_diary.scrum_member %></td>
          <td><%= link_to sprint_diary.bdiary, scrum_member_sprint_diary_path(@scrum_member, sprint_diary) %></td>
          <td><%= link_to 'Edit', edit_scrum_member_sprint_diary_path(@scrum_member, sprint_diary) %></td>
          <td><%= link_to 'Destroy', scrum_member_sprint_diary_path(@scrum_member, sprint_diary), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>
</div>
<!-- 日記一覧表示おわり -->