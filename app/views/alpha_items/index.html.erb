<div class="page-header">
  <%= link_to new_alpha_item_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Alpha item
  <% end %>
  <h1>Listing alpha_items</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Completed</th>
            <th>Completed at</th>
            <th>Alpha state</th>
            <th>Alpha item def</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @alpha_items) do |alpha_item| %>
            <td><%= alpha_item.completed %></td>
            <td><%= alpha_item.completed_at %></td>
            <td><%= alpha_item.alpha_state %></td>
            <td><%= alpha_item.alpha_item_def %></td>
            <td><%= link_to 'Show', alpha_item %></td>
        <td><%= link_to 'Edit', edit_alpha_item_path(alpha_item) %></td>
        <td><%= link_to 'Destroy', alpha_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
