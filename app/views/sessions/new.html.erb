<div class="container-fluid pt-5">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card p-4 bg-info text-dark">
        <div class="card-body">
          <%= form_for(:session, url: login_path, :html => {:class => 'form-signin container-fluid'}) do |f| %>
            <h2 class="form-signin-heading">ログイン</h2>
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: 'form-control', :placeholder => "example@company.com" %>
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を記憶する" %>
            <%= f.submit "ログイン", class: "btn btn-lg btn-block btn-info" %>
          <% end %>
        <%= link_to "新規アカウントの作成", signup_path %>
        </div>
      </div>
    </div>
  </div>
</div>
